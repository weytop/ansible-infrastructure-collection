{{ ansible_managed | comment }}

# Minio local/remote volumes.
MINIO_VOLUMES="{{ __minio_volumes }}"

# Minio cli options.
{% if minio_config_dir %}
MINIO_OPTS="--config-dir {{ minio_config_dir}} --address {{ minio_server_addr }} {{ minio_server_opts }}"
{% else %}
MINIO_OPTS="--address {{ minio_server_addr }} {{ minio_server_opts }}"
{% endif %}

{% if minio_root_user %}
# Root User of the server.
MINIO_ROOT_USER="{{ minio_root_user }}"
{% endif %}
{% if minio_root_password %}
# Root Password of the server.
MINIO_ROOT_PASSWORD="{{ minio_root_password }}"
{% endif %}
{% if minio_region %}
# Region to use
MINIO_REGION="{{ minio_region }}"
{% endif %}

{% if minio_storage_class_standard %}
# storage class parity settings
MINIO_STORAGE_CLASS_STANDARD="{{ minio_storage_class_standard }}"
{% endif %}
{% if minio_storage_class_rrs %}
MINIO_STORAGE_CLASS_RRS="{{ minio_storage_class_rrs }}"
{% endif %}
{{ minio_server_env_extra }}
